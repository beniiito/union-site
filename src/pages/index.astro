---
import Layout from "../layouts/Layout.astro";


//components
import Hero from "../components/landing/Hero.astro";
import Foter from "../components/landing/Foter.astro";
import Maps from "../components/landing/Maps.astro";
import Habitantes from "../components/landing/Habitantes.astro";
//code
---

<Layout title="Home">
  <Hero />
<div  class="">
  <section class="md:mb-32">
    <div
      class="relative overflow-hidden bg-cover bg-no-repeat bg-[50%] bg-[url('/mar.jpeg')] h-[563px]">
      <div
        class="absolute top-0 right-0 bottom-0 left-0 h-full w-full overflow-hidden bg-[hsla(0,0%,0%,0.65)] bg-fixed">
        <div class="flex h-full items-center ">
          <div class="px-6 text-center text-white md:px-12 ">
            <h2 class="md:text-5xl font-medium ">
              Bienvenidos<br />
              <p class="md:text-2xl md:font-medium text-justify mt-5 mb-5">
                Unión Hidalgo o Ranchu Gubiña, es una población ubicada en la región del Istmo de Tehuantepec, cabecera del municipio del mismo nombre, en el Estado de Oaxaca, al sureste de México
              </p>
            </h2>
          <Habitantes/>
          </div>
        </div>
      </div>
    </div>
  </section>
 
</div>
<div class="container mx-auto md:px-6">
  <p class="text-2xl md:text-5xl text-center mt-10 mb-8 md:mb-o md:mb-0">¿Como llegar?</p>
  <Maps />
</div>
  <script>
    const counters = document.querySelectorAll(".count");
    const speed = 200;

    counters.forEach((counter) => {
      const updateCount = () => {
        const target = parseInt(+counter.getAttribute("data-target"));
        const count = parseInt(+counter.innerText);
        const increment = Math.trunc(target / speed);
        console.log(increment);

        if (count < target) {
          counter.innerText = count + increment;
          setTimeout(updateCount, 1);
        } else {
          count.innerText = target;
        }
      };
      updateCount();
    });
  </script>

</Layout>
<Foter />
